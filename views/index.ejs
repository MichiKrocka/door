$.postJSON = function(url, data, callback, type) {
  return jQuery.ajax({
    'type':        'POST',
    'url':         url,
    'contentType': 'application/json; charset=utf-8',
    'data':        JSON.stringify(data),
    'dataType':    type ? type : 'json',
    'success':     callback
  });
};
