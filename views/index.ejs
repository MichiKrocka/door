var keyNames = {
  3: "Pause", 8: "Backspace", 9: "Tab", 13: "Enter", 16: "Shift",
  17: "Ctrl", 18: "Alt", 19: "Pause", 20: "CapsLock", 27: "Esc",
  32: "Space", 33: "PageUp", 34: "PageDown", 35: "End", 36: "Home",
